    <div class="container">
        <h1>My Todolist</h1>

        <div class="input-area">

            <div class="tasks">

            {{#each tasks}}

                <p>- Name: {{ name }}</p>

               <p>- Task: {{ task }}</p>

               <form action="/donetask/{{ id }}" method="GET">

                <button type="submit" class="todobtn" id="niceone">Done</button>

               </form>


                <form action="/edittask/{{ id }}" method="GET">
               
               <button type="submit" class="todobtn">Edit </button>
               
               </form>

               <form action="/deletetask/{{ id }}" method="POST">
               
               <button type="submit" class="todobtn" id="erase">Erase</button>
               
               </form>

            {{else}}

            <p>No tasks found. Add some!</p>

            <a href="/">Create tasks</a>

            {{/each}}

            </div>

            <a href="/" class="return">Return</a>

        </div>
    </div>